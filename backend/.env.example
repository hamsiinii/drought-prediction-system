# Application Settings
APP_NAME=Drought Analytics Microservice
APP_VERSION=1.0.0
ENVIRONMENT=development
PORT=8000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=drought_analytics

# PostgreSQL Configuration (Optional)
DATABASE_URL=postgresql://user:password@localhost:5432/droughtdb

# Security (Generate random strings for production)
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501

# Model Settings
MODEL_PATH=ml_models/
MODEL_FILE=stat_lstm_best_model.h5

# Logging
LOG_LEVEL=INFO

